<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    tools:context=".UI.SendToCardActivity">

    <include android:id="@+id/toolbar_send_card"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent"
             layout="@layout/toolbar_send_to_card">

    </include>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/progressBar"
        android:max="100"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_send_card_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:height="100dp"/>


    <Button
        android:id="@+id/btn_confirm_send_card_to_address"
        android:text="@string/confirm_send_card"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>